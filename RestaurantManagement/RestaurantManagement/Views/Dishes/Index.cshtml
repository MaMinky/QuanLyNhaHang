@model IEnumerable<RestaurantManagement.Models.Dishes>
@{
    ViewData["Title"] = "Dishes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dishes</h2>
<table class="table">
    <thead>
        <tr>
            <th>Dish Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dish in Model)
        {
            <tr>
                <td>@dish.DishName</td>
                <td>@dish.Price</td>
                <td>@dish.Description</td>
                <td>@dish.Stock</td>
            </tr>
        }
    </tbody>
</table>