<div class="user-greeting">
    @if (ViewBag.Username != null)
    {
        <p>Xin chào, @ViewBag.Username!</p>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Đăng xuất</a>
    }
</div>

